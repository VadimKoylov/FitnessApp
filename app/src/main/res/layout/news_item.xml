<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_items"
    android:orientation="vertical"
    android:id="@+id/parent_layout"
    android:layout_marginTop="20dp"
    android:elevation="2dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_items"
        android:id="@+id/imageFav"
        android:clickable="true"
        android:focusable="true"
        android:elevation="2dp">

        <RelativeLayout
            android:id="@+id/parent_layout_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_items"
            android:elevation="2dp">

            <RelativeLayout
                android:id="@+id/parent_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageAvatar"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/photo" />

                <TextView
                    android:id="@+id/nameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="52dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="7dp"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="14dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="14dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="43dp"
                android:layout_below="@id/parent_layout_1">

                <TextView
                    android:id="@+id/postBody"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_layout_3"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="#0000"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:orientation="horizontal"
                android:layout_below="@id/parent_layout_2">

                <CheckBox
                    android:id="@+id/imageLike"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:button="@drawable/image_like"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="9dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="43dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="17sp"
                    android:layout_gravity="bottom"
                    android:text="@string/like_count"/>

                <Button
                    android:id="@+id/imageComment"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="85dp"
                    android:background="@drawable/image_comment"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="9dp" />

                <TextView
                    android:id="@+id/commentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="112dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="17sp"
                    android:text="@string/comment_count" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>